{
  "manifest_version": 3,
  "name": "LexiDrop",
  "version": "1.0",
  "description": "选中文字右键发送到侧边栏",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "LexiDrop"
  }
} 